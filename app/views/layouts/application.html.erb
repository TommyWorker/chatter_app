<!DOCTYPE html>
<html>
  <head>
    <title>ChatterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </head>

  <body>
    <header>
        <div class="header-logo">
          <% if @current_user %>
            <%= link_to("ChatterApp", "/users/index") %>
          <% else %>
            <%= link_to("ChatterApp", "/") %>
          <% end %>
        </div>
        <ul class="header-menus">
          <%if @current_user %>
          <li>
          <%= link_to("ユーザ：" + @current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("ルーム一覧", "/talks/index") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/users/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method:"post"}) %>
          </li>
          <%else%>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <%end%>
        </ul>
      </header>
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    <%= yield %>
  </body>
</html>

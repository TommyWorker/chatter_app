<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%="/user_images/#{@user.image_name}"%>">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <%if @current_user.id == @user.id %>
      <%=link_to("編集", "/users/#{@user.id}/edit")%>
      <%else%>
        <%#存在チェック%>
        <% if Member.where(user_id: @user.id).count == 0 %>
          <%=link_to("トーク", "/users/#{@user.id}/talkentry")%>
        <% end %>
      <%end%>
    </div>
  </div>
</div>
